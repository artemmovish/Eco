<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Eco"
             xmlns:converters="clr-namespace:Eco.Converters"
             x:Class="Eco.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColor"/>
            <converters:InvertBoolToColorConverter x:Key="InvertBoolToColor"/>
            <converters:TransactionTypeToColorConverter x:Key="TransactionTypeToColorConverter"/>
            <converters:TransactionTypeToIconConverter x:Key="TransactionTypeToIconConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
